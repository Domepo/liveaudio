# API
API_PORT=3001
API_HOST=0.0.0.0
# Local dev uses SQLite via prisma/schema.prisma (no DATABASE_URL needed).
# Docker/Postgres uses prisma/schema.postgres.prisma:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/livevoice?schema=public
JWT_SECRET=change-me
JWT_ISSUER=liveaudio-api
ADMIN_LOGIN_NAME=admin
# Max login requests per 10 minutes per (ip + loginName). Successful logins don't count.
ADMIN_LOGIN_MAX_ATTEMPTS=30
# bcrypt hash for default admin password (legacy fallback), default in code is hash for "test"
# ADMIN_PASSWORD_HASH=$2a$12$...
ADMIN_PASSWORD_HASH=$2a$12$CBpEnaQBlvvAY/Z.kqa/JOCAawr.Hdn48.x44Vae4DuyEklXWm0ea
ADMIN_SESSION_TTL_HOURS=12
ADMIN_SESSION_REFRESH_THRESHOLD_MINUTES=60
ADMIN_WS_TOKEN_TTL_MINUTES=1440
TRUST_PROXY=false
JOIN_TOKEN_TTL_MINUTES=15
PIN_ROTATE_SECONDS=0
PIN_MAX_ATTEMPTS=6
# Debug mode is only for local development (npm run dev); ignored in Docker/runtime containers.
DEBUG_MODE=false
TESTTONE_WATCHDOG_LOG_FILE=logs/testtone-watchdog.log

# Media service
MEDIA_PORT=4000
MEDIA_HOST=0.0.0.0
MEDIA_LISTEN_IP=0.0.0.0
MEDIA_ANNOUNCED_IP=127.0.0.1
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999
MEDIA_INTERNAL_TOKEN=change-me-very-long-random-token

# Frontend
VITE_API_URL=http://localhost:3001
VITE_WS_URL=http://localhost:3001
